{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "sz",
      "app",
      "camelCase"
    ],
    "disable-next-line": "no-input-rename",
    "component-selector": [
      true,
      "element",
      "sz",
      "app",
      "kebab-case"
    ],
    "arrow-return-shorthand": true,
    "array-type": [
      true,
      "array"
    ],
    "ban-types": [
      true,
      [
        "Object",
        "Use {} instead."
      ],
      [
        "String",
        "Use string instead"
      ],
      [
        "Number",
        "Use number instead"
      ],
      [
        "Boolean",
        "Use boolean instead"
      ]
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      false,
      "check-space"
    ],
    "curly": false,
    "eofline": true,
    "forin": false,
    "import-blacklist": [true],
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [
      false
    ],
    "member-access": false,
    "member-ordering": [
      false
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [false, "ignore-params"],
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "no-unused-variable": [
      true,
      "check-parameters",
      {
        "ignore-pattern": "^_"
      }
    ],
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "prefer-const": true,
    "quotemark": [
      false,
      "single",
      "double"
    ],
    "radix": false,
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      false,
      "allow-null-check"
    ],
    "typedef-whitespace": [
      false,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "typeof-compare": true,
    "unified-signatures": true,
    "variable-name": [
      true,
      "ban-keywords",
      "allow-pascal-case",
      "allow-leading-underscore",
      "check-format"
    ],
    "whitespace": [
      true,
      /*"check-branch",*/
      /*"check-decl",*/
      /*"check-operator",*/
      "check-separator",
      "check-type",
      "check-module"
    ],

    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": false,
    "no-redundant-jsdoc": false,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "directive-class-suffix": true,
    "no-access-missing-member": true,
    "templates-use-public": true,
    "invoke-injectable": true
  }
}
